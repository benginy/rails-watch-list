<!-- app/views/lists/index.html.erb -->
<div class="container mt-3">
  <!-- Banner Section -->
  <div class="banner position-relative">
    <%= image_tag asset_path('list-banner.png'), alt: 'Banner Image', class: 'banner-img w-100' %>
    <div class="banner-text position-absolute top-50 start-50 translate-middle text-center text-white">
      <h1>Hey !</h1>
    </div>
    <%= link_to "Create a new list", new_list_path, class: 'btn btn-primary position-absolute bottom-0 end-0 mb-3 me-3' %>
  </div>

<!-- List Section -->
<ul class="list-group mt-3">
  <% @lists.each do |list| %>
    <li class="list-group-item p-0">
      <%= link_to list_path(list) do %>
        <% if list.photo.attached? %>
          <%= cl_image_tag list.photo.key, height: 300, width: 400, crop: :fill %>
        <% end %>
        <h2 class="card-title text-white text-center p-3"><%= list.name %></h2>
      <% end %>
    </li>
  <% end %>
</ul>
